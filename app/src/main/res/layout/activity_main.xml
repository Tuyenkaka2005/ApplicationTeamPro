<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/bg_header_card"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chào mừng trở lại!"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lý chi tiêu thông minh cùng CampusExpense"
                android:textColor="#E8F5E9"
                android:layout_marginTop="6dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Quick Overview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:weightSum="2">

            <!-- Tổng chi tiêu -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tổng chi tiêu"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/tvTotalSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ₫"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"
                        android:textSize="24sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Còn lại -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="110dp"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngân sách còn lại"
                        android:textColor="#666666"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvRemainingBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ₫"
                        android:textStyle="bold"
                        android:textColor="#388E3C"
                        android:textSize="24sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Tiêu đề chức năng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các Chức Năng"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Danh sách chức năng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mỗi card cao 78dp, dễ bấm, có ripple effect -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardExpenseTracking"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="14dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="18dp"
                app:cardElevation="5dp"
                app:rippleColor="#CCCCCC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_menu"
                        android:layout_marginEnd="20dp"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Theo dõi Chi phí"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#AAAAAA" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Các card còn lại (copy-paste và chỉ đổi text + id) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBudgetSetup"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="14dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="18dp"
                app:cardElevation="5dp"
                app:rippleColor="#CCCCCC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_menu"
                        android:layout_marginEnd="20dp"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thiết lập Ngân sách"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#AAAAAA" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardExpenseOverview"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="14dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="18dp"
                app:cardElevation="5dp"
                app:rippleColor="#CCCCCC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_menu"
                        android:layout_marginEnd="20dp"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng quan Chi phí"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#AAAAAA" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecurringExpenses"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="14dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="18dp"
                app:cardElevation="5dp"
                app:rippleColor="#CCCCCC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_menu"
                        android:layout_marginEnd="20dp"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chi phí Định kỳ"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#AAAAAA" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardExpenseReport"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="14dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="18dp"
                app:cardElevation="5dp"
                app:rippleColor="#CCCCCC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_menu"
                        android:layout_marginEnd="20dp"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Báo cáo Chi phí"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_arrow_forward"

                        app:tint="#AAAAAA" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSearchFilter"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="18dp"
                app:cardElevation="5dp"
                app:rippleColor="#CCCCCC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_menu"
                        android:layout_marginEnd="20dp"
                        app:tint="#4CAF50" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tìm kiếm và Lọc Chi Phí"
                        android:textColor="#333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#AAAAAA" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>