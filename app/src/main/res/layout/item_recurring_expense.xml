<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Đúng ID đây -->
            <TextView
                android:id="@+id/tvRecurringTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền nhà"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <TextView
                android:id="@+id/tvRecurringAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2.500.000 đ"
                android:textColor="#E74C3C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Gộp Category + Interval + NextRun vào 1 dòng cho gọn -->
            <TextView
                android:id="@+id/tvRecurringCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Nhà cửa • Mỗi tháng"
                android:textColor="#666666"
                android:textSize="13sp" />

            <!-- Dòng ngày chạy tiếp theo -->
            <TextView
                android:id="@+id/tvRecurringInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lần tới: 01/04/2025"
                android:textColor="#1976D2"
                android:textSize="13sp"
                android:textStyle="italic" />

            <!-- Để lại cái này để code không lỗi, nhưng ẩn đi -->
            <TextView
                android:id="@+id/tvNextRun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Nút xóa đẹp lung linh -->
        <ImageButton
            android:id="@+id/btnDeleteItem"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete"
            android:src="@android:drawable/ic_delete"
            android:scaleType="center"
            app:tint="#E74C3C" />

    </LinearLayout>
</androidx.cardview.widget.CardView>